{% extends "WebCreator/Public/Login.html.twig" %}

{% block content %}
    <main class="d-flex flex-column align-items-center justify-content-center w-100 vh-100">
        <div class="form-signin px-2">
            <form action="{{ fsc.url() }}" method="post">
                <input type="hidden" name="action" value="forgot"/>
                <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}"/>
                <h3 class="text-primary mb-4">FacturaScripts</h3>
                <h3>{{ i18n.trans('recovery-password') }}</h3>
                <div class="form-group">
                    <label class="mb-0 text-secondary">{{ i18n.trans('forgot-password-info') }}</label>
                    <input required="required" autofocus="autofocus" type="email"
                           class="form-control" name="email" placeholder="{{ i18n.trans('entry-email') }}"
                           value="{{ fsc.emailContact }}"
                           maxlength="100">
                </div>
                <div class="mb-2 messages text-center">
                    {% include 'WebCreator/Master/Messages.html.twig' %}
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">
                    {{ i18n.trans('send') }}
                </button>
            </form>
        </div>
        <div class="fixed-bottom text-center pb-3">
            <a href="/MeLogin">{{ i18n.trans('back-to-login') }}</a>
        </div>
    </main>
{% endblock %}