{% extends "WebCreator/Public/PortalTemplate.html.twig" %}

{% block header %}
{% endblock %}

{% block pageTitle %}
{% endblock %}

{% block footer %}
{% endblock %}

{% block css %}
    {{ parent() }}

    <style>
        .form-signin, .form-forgot, .form-register {
            width: 100%;
            max-width: 500px;
        }

        .messages .alert button span {
            display: none;
        }

        .separator-text {
            position: relative;
            display: inline-block;
        }

        .separator-text::before, .separator-text::after {
            position: absolute;
            content: "";
            top: 50%;
            -webkit-transform: translateY(-50%);
            -moz-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            -o-transform: translateY(-50%);
            transform: translateY(-50%);
            width: 100px;
            height: 1px;
            background-color: #eee;
        }

        .separator-text::before {
            left: calc(100% + 10px);
        }

        .separator-text::after {
            right: calc(100% + 10px);
        }
    </style>
{% endblock %}

{% block content %}
    <main class="d-flex flex-column align-items-center justify-content-center w-100 vh-100">
        <div class="form-signin px-2">
            <h3 class="text-primary text-center mb-4">FacturaScripts</h3>
            <div class="g_id_signin d-flex justify-content-center"
                 data-size="large"
                 data-width="1000"
                 data-type="standard"
                 data-theme="outline"
                 data-text="sign_in_with"
                 data-shape="rectangular"
                 data-logo_alignment="center">
            </div>
            <div class="separator text-center mb-4 mt-4">
                <div class="separator-text text-secondary">
                    <span>{{ i18n.trans('or-login-with') }}</span>
                </div>
            </div>
            <form action="{{ fsc.url() }}" method="post">
                <input type="hidden" name="action" value="login"/>
                <input type="hidden" name="multireqtoken" value="{{ fsc.multiRequestProtection.newToken() }}"/>
                <div class="form-group">
                    <label class="mb-0 text-secondary">{{ i18n.trans('email') }}</label>
                    <input required="required" autofocus="autofocus" type="email"
                           class="form-control" name="email" placeholder="{{ i18n.trans('entry-email') }}"
                           value="{{ fsc.emailContact }}"
                           maxlength="100">
                </div>
                <div class="form-group">
                    <label class="w-100 mb-0 text-secondary">
                        <span>{{ i18n.trans('password') }}</span>
                        <span class="float-right">
                        <a href="/MeForgot">{{ i18n.trans('forgotten-your-password') }}</a>
                    </span>
                    </label>
                    <input required="required" type="password" class="form-control"
                           name="passwd" placeholder="{{ i18n.trans('entry-password') }}"
                           maxlength="255">
                </div>
                <div class="mb-2 messages text-center">
                    {% include 'WebCreator/Master/Messages.html.twig' %}
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">
                    {{ i18n.trans('login') }}
                </button>
            </form>
        </div>
        <div class="fixed-bottom text-center pb-3 text-secondary">
            {{ i18n.trans('new-in-facturascripts') }}
            <strong>
                <a href="/MeRegister">{{ i18n.trans('register-me') }}</a>
            </strong>
        </div>
    </main>
{% endblock %}