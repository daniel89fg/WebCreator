<view>
    <columns>
        <column name="name" display="none">
            <widget type="text" fieldname="name" readonly="true" required="true" />
        </column>

        <group name="login-register" numcolumns="12">
            <column name="login-available" description="login-available-help" numcolumns="3" order="100">
                <widget type="select" fieldname="loginavailable" translate="true" required="true">
                    <values title="no">0</values>
                    <values title="yes">1</values>
                </widget>
            </column>

            <column name="register-available" description="register-available-help" numcolumns="3" order="110">
                <widget type="select" fieldname="registeravailable" translate="true" required="true">
                    <values title="no">0</values>
                    <values title="yes">1</values>
                </widget>
            </column>
        </group>

        <group name="login-register-google" title="access-google" numcolumns="12">
            <column name="google-app-id" order="100">
                <widget type="text" fieldname="googleappid" />
            </column>

            <column name="google-app-secret" order="110">
                <widget type="text" fieldname="googleappsecret" />
            </column>
        </group>
    </columns>
</view>